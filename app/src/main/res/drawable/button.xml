<?xml version="1.0" encoding="utf-8"?>

<!-- custom_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#787878" /> <!-- Button color when pressed -->
            <corners android:radius="20dp" /> <!-- Button corner radius -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#787878" /> <!-- Button color in default state -->
            <corners android:radius="20dp" /> <!-- Button corner radius -->
        </shape>
    </item>
</selector>
